<%- include('header', {pagetitle: 'Add/edit shepherd'}) -%>

<div class="container-fluid" style="padding: 20px">
    <h1><%= mode %> a shepherd</h1>
    <div class="container">
        <form method="POST" action="/shepherd/new">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label for="name">Name*</label>
                        <input type="text" name="name"
                               class="form-control"
                               id="name"
                               placeholder="Full name"
                               value="<%= shepherd.name %>"
                               required>
                    </div>
                    <div class="form-group">
                        <label for="born">Born*</label>
                        <input type="date"
                               name="born"
                               class="form-control"
                               id="born"
                               value="<%= shepherd.born %>"
                               required>
                    </div>
                    <div class="form-group">
                        <label for="adr">Address</label>
                        <input type="text"
                               name="address"
                               class="form-control"
                               id="adr"
                               value="<%= shepherd.address %>"
                               placeholder="Residence">
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="area">Area*</label>
                        <input type="text" name="area"
                               value="<%= shepherd.area %>"
                               class="form-control" id="area"
                               placeholder="Where is he/she working usually?" required>
                    </div>
                    <div class="form-group">
                        <label for="photo">Photo</label>
                        <input type="file" name="profile_img" class="form-control-file" id="photo">
                        <!-- Itt majd a szerverre feltölti a fájlt, és én majd csak az azon belüli elérési útját fogom eltárolni. -->
                    </div>
                </div>
                <div class="col-12" style="text-align: right">
                    <a type="button" href="/list" class="btn btn-outline-secondary"
                       style="margin: 10px">Cancel</a>
                    <button class="btn btn-outline-primary" type="submit">Submit</button>
                </div>
            </div>
        </form>

    </div>

</div>

<%- include('footer') -%>
